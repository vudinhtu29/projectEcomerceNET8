        </div>
        <!-- Repeat the above block for more products -->
    </div>

    <!-- Categories Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-center">Danh mục</h2>
        </div>
        <!-- Example Category Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card">
                <img src="img/category1.jpg" class="card-img-top" alt="Category 1">
                <div class="card-body">
                    <h5 class="card-title">Tất cả sản phẩm</h5>
                    <a href="#" class="btn btn-secondary">Xem thêm</a>
                </div>
            </div>
        </div>
        <!-- Repeat the above block for more categories -->
    </div>

    <!-- Promotions Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-center">Khuyến mãi đặc biệt</h2>
        </div>
        <!-- Example Promotion Card -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <img src="img/promo1.jpg" class="card-img-top" alt="Promotion 1">
                <div class="card-body">
                    <h5 class="card-title">Khuyến mãi 1</h5>
                    <p class="card-text">Chi tiết về khuyến mãi 1</p>
                    <a href="#" class="btn btn-warning">Xem ngay</a>
                </div>
            </div>
        </div>
        <!-- Repeat the above block for more promotions -->
    </div>
</div>
<!-- Main Content End -->
